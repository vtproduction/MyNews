<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1"
    android:padding="@dimen/item_padding_large"
    android:id="@+id/item_main"
    android:background="@drawable/border_bottom">

    <RelativeLayout
        android:layout_weight="0.6"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:paddingRight="@dimen/item_padding_large"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/item_title"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/base_color_1"
            android:maxLines="1"
            android:ellipsize="end"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/item_subtitle"
            android:textSize="14sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/item_title"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/item_section"
            android:textSize="14sp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/item_postdate"
            android:maxLines="1"
            android:ellipsize="end"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/item_postdate"
            android:textSize="14sp"
            android:layout_marginLeft="@dimen/item_padding_small"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"/>


    </RelativeLayout>
    <ImageView
        android:layout_width="0dp"
        android:layout_weight="0.4"
        android:layout_height="90dp"
        android:id="@+id/item_thumbnail"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_broken_image"
        android:scaleType="centerCrop"/>
</LinearLayout>